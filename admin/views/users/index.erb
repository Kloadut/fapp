<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:users, :index) %></li>
      <li><%= link_to pat(:new), url(:users, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:users) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:user, :nick) %></th>
          <th><%= mat(:user, :crypted_password) %></th>
          <th><%= mat(:user, :email) %></th>
          <th><%= mat(:user, :role) %></th>
          <th><%= mat(:user, :created_at) %></th>
          <th><%= mat(:user, :updated_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td class="first"><%= user.nick %></td>
          <td><%= user.crypted_password %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= user.created_at %></td>
          <td><%= user.updated_at %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:users, :edit, :id => user.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:users, :destroy, :id => user.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
